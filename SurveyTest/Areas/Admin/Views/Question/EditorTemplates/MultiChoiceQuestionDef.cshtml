@model SurveyTest.Models.MultiChoiceQuestionDef

<br />
<table id="OptTable">
    <tr>
        <th>Option</th>
        <th>Value</th>
        <th><i>Actions</i></th>
    </tr>

    @for (var idx = 0; idx < Model.Questions.Count; idx++)
    {
        <tr>
            <td>@Html.TextBoxFor(m => m.Questions[idx].Text)</td>
            <td>@Html.TextBoxFor(m => m.Questions[idx].Value, new { @class = "numeric" })</td>
            <td>@if (idx == 0)  { 
                    @:- 
                }  else  { 
                    <a onclick='MoveOption(@idx, -1)'>Up</a> 
                } | 
                @if (idx == (Model.Questions.Count - 1)) { 
                    @:- 
                }  else  { 
                <a onclick="MoveOption(@idx, 1)">Down</a>
                } | 
                <a onclick="RemoveOption(@idx)">Remove</a></td>
        </tr>
    }
</table>
<br />
<div>
    @Html.Label("NewOptTxt", "New Option")
    @Html.TextBox("NewOptTxt")

    @Html.Label("NewOptValue", "Value")
    @Html.TextBox("NewOptValue", 0, new { @class = "numeric" })
    
    <input id="AddOpt" type="button" value="Add Option" onclick="AddOption()" />
</div>
