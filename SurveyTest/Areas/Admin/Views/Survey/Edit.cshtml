        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.survey_name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.survey_name)
            @Html.ValidationMessageFor(model => model.survey_name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.survey_desc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.survey_desc)
            @Html.ValidationMessageFor(model => model.survey_desc)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

