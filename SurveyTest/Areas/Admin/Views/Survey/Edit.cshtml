@model SurveyTest.Repository.survey

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>survey</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.survey_id)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.survey_id, new { disabled = "disabled", @readonly = "readonly"} )
            @Html.ValidationMessageFor(model => model.survey_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.survey_name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.survey_name)
            @Html.ValidationMessageFor(model => model.survey_name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.survey_desc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.survey_desc)
            @Html.ValidationMessageFor(model => model.survey_desc)
        </div>

        <div>
            <table>
                <tr>
                    <th>Question</th>
                    <th>Order</th>
                    <th>Mandatory</th>
                </tr>
                @{ var idx = 0; }
                @foreach (var sq in Model.SurveyQuestions.OrderBy(x => x.question_order))
                { 
                    @Html.Hidden(string.Format("SurveyQuestions[{0}].survey_id",idx++), sq.survey_id);
                    <tr>
                        <td>@Html.DisplayText(sq.QuestionDef.question_def_name)</td>
                        <td>@Html.DisplayText(sq.question_order.ToString())</td>
                        <td>@Html.DisplayText(sq.mandatory.ToString())</td>
                    </tr>
                }
            </table>
        </div>


        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
